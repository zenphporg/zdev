{
  "name": "zenphp/zdev",
  "description": "Zdev is a command-line tool for scaffolding new composer packages and other projects.",
  "keywords": [
    "zdev",
    "console",
    "cli"
  ],
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "laravel-zero/framework": "^12.0.4",
    "laravel-zero/phar-updater": "^1.4"
  },
  "require-dev": {
    "driftingly/rector-laravel": "^2.1.8",
    "larastan/larastan": "^3.8.1",
    "mockery/mockery": "^1.6.12",
    "pestphp/pest": "^4.2.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "rector/rector": "^2.2.14",
    "zenphp/fixr": "^1.0.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": [
      "./vendor/bin/rector",
      "./vendor/bin/fixr"
    ],
    "test:types": "./vendor/bin/pest --type-coverage --parallel --min=100",
    "test:lint": [
      "./vendor/bin/rector --dry-run",
      "./vendor/bin/fixr --test"
    ],
    "test:feat": "./vendor/bin/pest",
    "test:coverage": "./vendor/bin/pest --coverage --parallel --coverage-clover=clover.xml --min=100.0; php bin/clean-coverage",
    "test:static": "./vendor/bin/phpstan analyze",
    "test": [
      "@test:types",
      "@test:static",
      "@test:lint",
      "@test:types",
      "@test:feat"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "bin": [
    "builds/zdev"
  ]
}
